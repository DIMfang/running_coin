/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname-block {
  padding: 8px 0 0 0;
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.userinfo-nickname {
  margin-bottom: 10px;
  font-size: 15px;
}

.usermotto {
  margin-top: 200px;
}

.card {
  width: 85%;
  padding: 0 10px 0 10px;
  position: relative;
  overflow: hidden;
  border-radius: 4px;
  -webkit-box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
                        0 3px 1px -2px rgba(0, 0, 0, 0.2),
                        0 1px 5px 0 rgba(0, 0, 0, 0.12);
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
                0 3px 1px -2px rgba(0, 0, 0, 0.2),
                0 1px 5px 0 rgba(0, 0, 0, 0.12);
}

.people-list {
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.people-list-item {
  padding: 10px 0 0 0;
  width: 100%;
  height: 90px;
  display: flex;
  flex-direction: row;
   align-items: left; 
}

.divider {
  border-color: rgba(0,0,0,0.12);
  border-bottom-width: 1px;
  border-bottom-style: solid;
}

.user-card-decorator {
  background-color: #ffe7ec;
}

.userinfo-nickname.decorator {
  color: #630;
}

.vote-area {
  height: 80%;
  margin: 10px 0 0 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.vote-icon-align {
  display: flex;
  flex-direction: row;
  align-items: center;
  height:100%
}


.progress {
  height:8px;
  border-radius: 3px;
}

.bg-error {
  background-color: #ff5151
}

.bg-success {
  background-color: #71c63e
}

.bg-info {
  background-color: #006efc
}

.bg-warning {
  background-color: #ffd80d
}